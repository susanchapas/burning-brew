{
  "extends": "stylelint-config-standard",
  "rules": {
    "color-function-alias-notation": "legacy",      
    "color-function-notation": "legacy",            
    "alpha-value-notation": "number",               
    "media-feature-range-notation": "prefix",       
    "color-hex-length": "either",                    
    "selector-class-pattern": "^[a-z][a-z0-9]*(?:-[a-z0-9]+)*(?:__(?:[a-z0-9]+(?:-[a-z0-9]+)*))?(?:--[a-z0-9]+(?:-[a-z0-9]+)*)?$",
    "comment-empty-line-before": ["always", { "except": ["first-nested"], "ignore": ["stylelint-commands"] }],
    "at-rule-empty-line-before": ["always", { "except": ["first-nested","after-same-name"], "ignore": ["blockless-group","after-comment"] }]
  }
}